extends base

block content
  main.main
    .create-form
      h2.heading-secondary.ma-bt-lg Create New Tour
      form.form.form--create
        .form__group
          label.form__label(for='startDates') Start Date 
          input#startDates.form__input(type='date', placeholder='Enter 1st start date of tour', required)
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='text', placeholder='Enter your name', required)
        .form__group
          label.form__label(for='duration') Duration
          input#duration.form__input(type='number', placeholder='Enter tour Duration', required)
        .form__group
          label.form__label(for='maxGroupSize') Max Group Size
          input#maxGroupSize.form__input(type='number', placeholder='Enter Max Group Size', required)
        .form__group
          label.form__label(for='difficulty') Difficulty
          input#difficulty.form__input(type='text', placeholder='Enter tour difficulty', required)
        .form__group
          label.form__label(for='price') Price
          input#price.form__input(type='number', placeholder='Enter Price for the tour', required)
        .form__group
          label.form__label(for='summary') Summary
          input#summary.form__input(type='text', placeholder='Enter tour summary', required)
        .form__group
          label.form__label(for='description') Description
          input#description.form__input(type='text', placeholder='Enter tour description', required)
        .form__group.mat-bt-md
          label.form__label(for='imageCover') Image Cover
          input#imageCover.form__input(type='file', accept='image/*', placeholder='Choose image cover')
        .form__group.mat-bt-md
          label.form__label(for='images') Tour Images
          input#images.form__input(type='file', accept='image/*', placeholder='Choose image for tour' multiple)
        .form__group
          label.form__label(for='locationInfo') Location
          input#locationInfo.form__input(type='text', placeholder='Enter the location of tour', required)
        .form__group.mat-bt-md
          label.form__label(for='locationImage') Location Image
          input#locationImage.form__input(type='file', accept='image/*', placeholder='Choose location image')
        .form__group
          button.btn.btn--green Create Tour